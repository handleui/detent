{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "@detent/go-cli#build": {
      "inputs": ["**/*.go", "go.mod", "go.sum", "package.json"],
      "outputs": ["dist/**"]
    },
    "@detent/cli#build": {
      "dependsOn": [
        "@detent/persistence#build",
        "@detent/healing#build",
        "@detent/git#build"
      ],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": ["dist/**"]
    },
    "//#check": {},
    "//#lint:go": {
      "inputs": ["apps/go-cli/**/*.go", ".golangci.yml"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
