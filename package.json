{
  "name": "detent",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run //#check //#lint:go",
    "check": "ultracite check",
    "lint:go": "cd apps/go-cli && golangci-lint run ./...",
    "fix": "ultracite fix && cd apps/go-cli && golangci-lint run --fix ./...",
    "check-types": "turbo run check-types",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/cli": "^2.29.4",
    "lefthook": "^2.0.13",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.2",
    "typescript": "5.9.2",
    "ultracite": "7.0.7"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
