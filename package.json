{
  "name": "detent",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "ultracite check",
    "fix": "ultracite fix",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "prepare": "lefthook install",
    "tag": "bash scripts/tag.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/cli": "^2.29.4",
    "lefthook": "^2.0.13",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.2",
    "typescript": "5.9.2",
    "ultracite": "7.0.8",
    "wrangler": "^4.54.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "dependencies": {
    "@handleui/shimmer": "0.1.0"
  }
}
