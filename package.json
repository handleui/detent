{
  "name": "detent",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint lint:go",
    "lint:go": "cd apps/cli && golangci-lint run ./...",
    "fix": "ultracite fix && cd apps/cli && golangci-lint run --fix ./...",
    "check-types": "turbo run check-types",
    "prepare": "lefthook install",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/cli": "^2.29.8",
    "lefthook": "^2.0.12",
    "turbo": "^2.7.1",
    "typescript": "5.9.2",
    "ultracite": "6.4.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
