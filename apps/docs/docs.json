{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Detent Docs",
  "colors": {
    "primary": "#17DB4E",
    "light": "#17DB4E",
    "dark": "#17DB4E"
  },
  "appearance": {
    "default": "system"
  },
  "favicon": "/favicon.svg",
  "subdirectory": "docs",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "GETTING STARTED",
            "icon": "https://mintlify-assets.b-cdn.net/compass-2.svg",
            "pages": ["index", "quickstart", "development"]
          },
          {
            "group": "ESSENTIALS",
            "icon": "https://mintlify-assets.b-cdn.net/star-2.svg",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Endpoint Examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/handleui/detent",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://github.com/handleui/detent/issues"
      }
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/handleui/detent"
    }
  },
  "background": {
    "color": {
      "dark": "#252525"
    }
  }
}
