        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "cli/welcome",
              "cli/quickstart",
              "cli/installation",
              "cli/concepts"
            ]
          },
          {
            "group": "Core",
            "pages": ["cli/check", "cli/heal"]
          },
          {
            "group": "Healing",
