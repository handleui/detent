{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Detent Docs",
  "colors": {
    "primary": "#313131",
    "light": "#F58514",
    "dark": "#F58514"
  },
  "appearance": {
    "default": "dark",
    "strict": true
  },
  "subdirectory": "docs",
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Contact",
          "icon": "envelope",
          "href": "https://detent.sh/contact"
        },
        {
          "anchor": "Pricing",
          "icon": "credit-card",
          "href": "https://detent.sh/pricing"
        },
        {
          "anchor": "Status",
          "icon": "signal",
          "href": "https://status.detent.sh"
        }
      ]
